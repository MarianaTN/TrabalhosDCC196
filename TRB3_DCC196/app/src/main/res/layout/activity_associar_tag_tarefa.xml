<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marit.trb3_dcc196.AssociarTagTarefa">

    <Button
        android:id="@+id/btnMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="8dp"
        android:text="Voltar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lstTag" />

    <ListView
        android:id="@+id/lstTarefa"
        android:layout_width="358dp"
        android:layout_height="187dp"
        tools:layout_editor_absoluteX="17dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp" />

    <ListView
        android:id="@+id/lstTag"
        android:layout_width="355dp"
        android:layout_height="211dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/lstTarefa"
        tools:layout_editor_absoluteX="15dp" />

    <Button
        android:id="@+id/btnAssocia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="108dp"
        android:layout_marginTop="8dp"
        android:text="Associar"
        app:layout_constraintStart_toEndOf="@+id/btnMain"
        app:layout_constraintTop_toBottomOf="@+id/lstTag" />
</android.support.constraint.ConstraintLayout>
